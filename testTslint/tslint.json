{
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      2,
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "semi": false
      }
    ],
    "align": [true, "parameters", "statements"],
    "prefer-const": true,
    "quotemark": [true, "single"],
    "semicolon": [true, "never"],
    "trailing-comma": [true, { "multiline": "always", "singleline": "never" }],
    "whitespace": true
  }
}
